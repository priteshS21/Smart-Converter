<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hexasoftwares.smartconverter">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SelectionScreen"
            android:label="Smart Converter"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Area"
            android:label="Area"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".DigitalStorage"
            android:label="Digital Storage"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Frequency"
            android:label="Frequency"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Length"
            android:label="Length"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Mass"
            android:label="Mass"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Speed"
            android:label="Speed"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Temperature"
            android:label="Temperature"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Time"
            android:label="Time"
            android:windowSoftInputMode="adjustPan"></activity><!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>